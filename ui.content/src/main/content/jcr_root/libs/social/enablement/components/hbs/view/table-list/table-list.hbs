<div class="scf-report-userassignment-table scf-list-view" data-component-id="{{id}}" data-scf-component="social/enablement/components/hbs/view/table-list" style="display:none">
    {{#if items}}
        <table class="table table-striped table-hover scf-table" id="user-assignment-table" width="100%">
            <thead>
                <tr>
                    <th class="bootstrap-Table-headerCell">{{i18n "Assignments"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "Type"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "Due Date"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "Completion Status"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "Completion Percentage"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "Success Status"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "Score"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "Comments"}}</th>
                    <th class="bootstrap-Table-headerCell">{{i18n "My Rating"}}</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}

                    {{#equals this.enablementType "resource"}}
                        {{include this resourceType="social/enablement/components/hbs/view/resource/table-row"}}
                    {{/equals}}

                    {{#equals this.enablementType "learningpath"}}
                        {{include this resourceType="social/enablement/components/hbs/view/learningpath/table-row"}}
                    {{/equals}}

                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="col-md-12">
            <h4 class="text-center">{{i18n "There are no items to display." }}</h4></div>
    {{/if}}
</div>
