<div data-component-id="{{id}}" data-scf-component="social/enablement/components/hbs/admin/createresources">
    <form method="post" id="form-wizard-dataform" class="coral-Wizard coral-Form coral-Form--vertical">

        <input id="published" type="hidden" name="published" value="false">
        <input type="hidden" name=":operation" value="{{#if title}}social:updateEnablementResourceModel{{else}}social:createEnablementResourceModel{{/if}}">
        <input type="hidden" name="sling:resourceType" value="social/enablement/components/hbs/resource/model">
        <input type="hidden" name="enablement-type" value="resource">
        <input type="hidden" name="_charset_" value="utf-8">

        <coral-wizardview>
            <div class="scf-wizardview-header">
                <div class="scf-wizard-title coral-Heading coral-Heading--2">
                    {{#if title}}
                        {{i18n "Edit Resource"}}
                    {{else}}
                        {{i18n "Create Resource"}}
                    {{/if}}
                </div>
                <coral-steplist class="scf-wizard-steplist" coral-wizardview-steplist="">
                    <coral-step selected>
                        <coral-step-label class="coral-Step-label">{{i18n "Basic Info"}}</coral-step-label>
                    </coral-step>
                    <coral-step>
                        <coral-step-label class="coral-Step-label">{{i18n "Add Content"}}</coral-step-label>
                    </coral-step>
                    <coral-step>
                        <coral-step-label class="coral-Step-label">{{i18n "Settings"}}</coral-step-label>
                    </coral-step>
                    <coral-step>
                        <coral-step-label class="coral-Step-label">{{i18n "Assignments"}}</coral-step-label>
                    </coral-step>
                </coral-steplist>
                <div class="scf-enablement-erroralert scf-is-hidden">
                    <coral-alert size="L" variant="error" style="position: absolute;">
                        <coral-alert-header class="coral-Alert-title">{{i18n "Error"}}</coral-alert-header>
                        <coral-alert-content class="coral-Alert-message">{{i18n "Server Error, Please try again"}}</coral-alert-content>

                        <div style="text-align:right">
                            <button is="coral-button" variant="minimal" coral-close>{{i18n "Close"}}</button>
                        </div>
                    </coral-alert>
                </div>
                <coral-panelstack coral-wizardview-panelstack="" class="scf-wizard-controls">
                    <coral-panel selected="" role="tabpanel">
                        <coral-panel-content>
                            <a is="coral-anchorbutton" class="scf-js-cancelbtn" href="{{#if title}} /communities/resource-info.html {{else}} /communities/site-resources.html {{/if}}">{{i18n "Cancel"}}</a>
                            <button coral-wizardview-next="" is="coral-button" type="button" disabled="disabled" class="scj-js-detailstab-next" title="{{i18n 'Please fill all mandatory fields marked with * ' }}">{{i18n "Next"}}</button>
                        </coral-panel-content>
                    </coral-panel>
                    <coral-panel role="tabpanel">
                        <coral-panel-content>
                            <button is="coral-button" coral-wizardview-previous="" type="button">{{i18n "Back"}}</button>
                            <button is="coral-button" coral-wizardview-next="" type="button" class="scj-js-contenttab-next">{{i18n "Next"}}</button>
                        </coral-panel-content>
                    </coral-panel>
                    <coral-panel role="tabpanel">
                        <coral-panel-content>
                            <button is="coral-button" coral-wizardview-previous="" type="button">{{i18n "Back"}}</button>
                            <button is="coral-button" coral-wizardview-next="" type="button" class="scj-js-settingstab-next" title="{{i18n 'Please fill all mandatory fields marked with * ' }}">{{i18n "Next"}}</button>
                        </coral-panel-content>
                    </coral-panel>
                    <coral-panel role="tabpanel">
                        <coral-panel-content>
                            <button is="coral-button" coral-wizardview-previous="" type="button">{{i18n "Back"}}</button>
                            <button is="coral-button" variant="primary" id="cq-social-create-resource-submit">
                                {{#if title}} 
                                    {{i18n "Update"}}
                                {{else}}
                                    {{i18n "Create"}}
                                {{/if}}
                            </button>
                        </coral-panel-content>
                    </coral-panel>
                </coral-panelstack>
            </div>
            <coral-panelstack coral-wizardview-panelstack="" class="coral-PanelStack" role="presentation">
                <coral-panel class="coral-Well coral-Panel is-selected" selected="" role="tabpanel" aria-selected="true" aria-hidden="false">
                    <coral-panel-content>
                        {{include this resourceType="social/enablement/components/hbs/admin/createresources" template="resourcedetails"}}
                    </coral-panel-content>
                </coral-panel>
                <coral-panel class="coral-Well coral-Panel" role="tabpanel" aria-selected="false" aria-hidden="true">
                    <coral-panel-content>
                        {{include this resourceType="social/enablement/components/hbs/admin/createresources" template="resourcecontent"}}
                    </coral-panel-content>
                </coral-panel>
                <coral-panel class="coral-Well coral-Panel" role="tabpanel" aria-selected="false" aria-hidden="true">
                    <coral-panel-content>
                        {{include this resourceType="social/enablement/components/hbs/admin/createresources" template="resourcesettings"}}
                    </coral-panel-content>
                </coral-panel>
                <coral-panel class="coral-Well coral-Panel" role="tabpanel" aria-selected="false" aria-hidden="true">
                    <coral-panel-content>
                        {{include this resourceType="social/enablement/components/hbs/admin/createresources" template="resourceassignment"}}
                    </coral-panel-content>
                </coral-panel>
            </coral-panelstack>
        </coral-wizardview>
    </form>

    <coral-dialog>
        <form id='external-url-resource-creation-form' data-assetdefcoverimg='/libs/settings/wcm/designs/default/resources/social/enablement/default_for_external_url_resource.png' class='foundation-toggleable coral-Modal coral-Form coral-Form--vertical' data-type='default'>
            <coral-dialog-header>{{i18n "Add an External URL"}}</coral-dialog-header>
            <coral-dialog-content>
                <div class='coral-Form-fieldwrapper'>
                    <label class="coral-Form-fieldlabel">{{i18n "Title"}}</label>
                    <input class='coral-Form-field coral-Textfield' type='text' name='external-url-title' placeholder="{{i18n 'Title'}}" value='' aria-required='true'>
                </div>
                <div class='coral-Form-fieldwrapper'>
                    <label class="coral-Form-fieldlabel">{{i18n "URL"}}</label>
                    <input class='coral-Form-field coral-Textfield' data-placeholder='http://www.example.com/mypage' type='text' name='external-url' placeholder='http://' value='' aria-required='true'>
                </div>
            </coral-dialog-content>
            <coral-dialog-footer>
                <button is="coral-button" data-dismiss='modal' autocomplete='off' variant="secondary" type="button" size="M">
                    <coral-button-label>{{i18n "Cancel"}}</coral-button-label>
                </button>
                <button is="coral-button" variant="primary" type="submit" size="M">
                    <coral-button-label>{{i18n "Add"}}</coral-button-label>
                </button>
            </coral-dialog-footer>
        </form>
    </coral-dialog>

    <form id='assetAddNotifyModal' data-type='info notice' class='foundation-toggleable coral-Modal coral-Form coral-Form--vertical'>
        <div class="coral-Modal-header">
            <i class="coral-Modal-typeIcon coral-Icon coral-Icon--sizeS"></i>
            <h2 class="coral-Modal-title coral-Heading coral-Heading--2">{{i18n "Add Asset"}}</h2>
            <button class="coral-MinimalButton coral-Modal-closeButton" type="button" title="Close" data-dismiss="modal">
                <i class="coral-Icon coral-Icon--sizeXS coral-Icon--close coral-MinimalButton-icon"></i>
            </button>
        </div>
        <div class="coral-Modal-body"><span>{{i18n "If the Asset is SCORM 1.2 or SCORM 2004, tracking will be enabled. Non-SCORM ZIP assets deliver no advanced tracking."}}</span></div>
        <div class="coral-Modal-footer">
            <button data-dismiss='modal' type='button' autocomplete='off' class='coral-Button cancelBtn'><span>{{i18n "Cancel"}}</span></button>
            <button class='coral-Button--primary primaryBtn coral-Button' type='submit'>{{i18n "Add"}}</button>
        </div>
    </form>

    <coral-dialog>
        <form id='external-url-connect-resource-creation-form' data-assetdefcoverimg='/libs/settings/wcm/designs/default/resources/social/enablement/default_for_external_url_resource.png' class='foundation-toggleable coral-Modal coral-Form coral-Form--vertical' data-type='default'>
            <coral-dialog-header>{{i18n "Add an Adobe Connect URL"}}</coral-dialog-header>
            <coral-dialog-content>
                <div class='coral-Form-fieldwrapper'>
                    <label class="coral-Form-fieldlabel">{{i18n "Title"}}</label>
                    <input class='coral-Form-field coral-Textfield' type='text' name='external-url-title' placeholder="{{i18n 'Title'}}" value='' aria-required='true'>
                </div>
                <div class='coral-Form-fieldwrapper'>
                    <label class="coral-Form-fieldlabel">{{i18n "URL"}}</label>
                    <input class='coral-Form-field coral-Textfield' data-placeholder='http://www.example.com/mypage' type='text' name='external-url' placeholder='http://' value='' aria-required='true'>
                </div>
            </coral-dialog-content>
            <coral-dialog-footer>
                <button is="coral-button" data-dismiss='modal' autocomplete='off' variant="secondary" type="button" size="M">
                    <coral-button-label>{{i18n "Cancel"}}</coral-button-label>
                </button>
                <button is="coral-button" variant="primary" type="submit" size="M">
                    <coral-button-label>{{i18n "Add"}}</coral-button-label>
                </button>
            </coral-dialog-footer>
        </form>
    </coral-dialog>

    <coral-dialog>
        <form id='external-resource-creation-form' data-assetdefcoverimg='/libs/settings/wcm/designs/default/resources/social/enablement/default_for_external_url_resource.png' class='foundation-toggleable coral-Modal coral-Form coral-Form--vertical' data-type='default'>
            <coral-dialog-header>{{i18n "Define an External Resource"}}</coral-dialog-header>
            <coral-dialog-content>
                <div class='coral-Form-fieldwrapper'>
                    <label class="coral-Form-fieldlabel">{{i18n "Title"}}</label>
                    <input class='coral-Form-field coral-Textfield' type='text' name='external-url-title' placeholder="{{i18n 'Title'}}" value='' aria-required='true'>
                </div>
                <div class='coral-Form-fieldwrapper'>
                    <label class="coral-Form-fieldlabel">{{i18n "Location"}}</label>
                    <input class='coral-Form-field coral-Textfield' data-placeholder='Room name' type='text' name='location' placeholder="{{i18n 'Location'}}" value='' aria-required='true'>
                </div>
            </coral-dialog-content>
            <coral-dialog-footer>
                <button is="coral-button" data-dismiss='modal' autocomplete='off' variant="secondary" type="button" size="M">
                    <coral-button-label>{{i18n "Cancel"}}</coral-button-label>
                </button>
                <button is="coral-button" variant="primary" type="submit" size="M">
                    <coral-button-label>{{i18n "Add"}}</coral-button-label>
                </button>
            </coral-dialog-footer>
        </form>
    </coral-dialog>

    <form id='noasset-warn-dialog' class='foundation-toggleable coral-Modal coral-Form coral-Form--vertical' data-type='notice'>
        <div class="coral-Modal-header">
            <i class="coral-Modal-typeIcon coral-Icon coral-Icon--sizeS"></i>
            <h2 class="coral-Modal-title coral-Heading coral-Heading--2">{{i18n "No Asset Attached"}}</h2>
            <button class="coral-MinimalButton coral-Modal-closeButton" type="button" title="Close" data-dismiss="modal">
                <i class="coral-Icon coral-Icon--sizeXS coral-Icon--close coral-MinimalButton-icon "></i>
            </button>
        </div>
        <div class="coral-Modal-body"><span>{{i18n "There is no Asset associated with this Resource."}}</span></div>
        <div class="coral-Modal-footer">
            <button data-dismiss='modal' type='button' autocomplete='off' class='coral-Button'><span>{{i18n "Cancel"}}</span></button>
            <button data-dismiss='modal' type='button' autocomplete='off' class='coral-Button coral-Button--primary'><span>{{i18n "Continue"}}</span></button>
        </div>
    </form>
    <form id='saveresource-warn-dialog' class='foundation-toggleable coral-Modal coral-Form coral-Form--vertical' data-type='notice'>
        <div class="coral-Modal-header">
            <i class="coral-Modal-typeIcon coral-Icon coral-Icon--sizeS"></i>
            <h2 class="coral-Modal-title coral-Heading coral-Heading--2">{{i18n "Save Resource Alert"}}</h2>
            <button class="coral-MinimalButton coral-Modal-closeButton" type="button" title="Close" data-dismiss="modal">
                <i class="coral-Icon coral-Icon--sizeXS coral-Icon--close coral-MinimalButton-icon "></i>
            </button>
        </div>
        <div class="coral-Modal-body"><span>{{i18n "Changes to the enrollee list will be published on Save. To publish any additional Resource changes made, choose Publish."}}</span></div>
        <div class="coral-Modal-footer">
            <button data-dismiss='modal' type='button' autocomplete='off' class='coral-Button coral-Button--primary'><span>{{i18n "Continue"}}</span></button>
        </div>
    </form>
</div>
