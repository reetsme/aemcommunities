<div class="col-lg-3 col-sm-4 scf-row" data-component-id="{{id}}" data-scf-component="social/enablement/components/hbs/view/learningpath/card">
    <div class="scf-content-card learning-path-card" data-resourcename="{{this.title}}">
        {{#if allPrerequisitesCompleted}}
            <a class="thumbnail" href="{{friendlyUrl}}">
                <div class="scf-card-header">
                    <span class="scf-resource-icon">
                        <span class="glyphicon glyphicon-road" aria-hidden="true"></span>&nbsp;
                    <span>{{ totalSize }}</span>
                    </span>
                    {{include this resourceType="social/enablement/components/hbs/view/resource/card" template="assignment-status"}}
                </div>
                {{#if smallAsset }}
                    <div class="card-image" style="background-image: url('{{getContextPath ''}}{{smallAsset.assetResourcePath}}');"></div>
                {{else}}

                    {{#if cardImagePath}}
                        <div class="card-image" style="background-image: url('{{getContextPath ''}}{{cardImagePath}}');"></div>
                    {{else}}
                        <div class="card-image" style="background-image: url('{{getContextPath ''}}/etc.clientlibs/settings/wcm/designs/default/resources/social/enablement/defaultCardImage.png');"></div>
                    {{/if}}
                {{/if}}
            </a>
        {{else}}
            <a class="thumbnail" evt="click=sendPreReqMessage">
                <div class="scf-card-header">
                    <span class="scf-resource-icon">
                        <span class="glyphicon glyphicon-road" aria-hidden="true"></span>&nbsp;
                    <span>{{ totalSize }}</span>
                    </span>
                    {{include this resourceType="social/enablement/components/hbs/view/resource/card" template="assignment-status"}}
                </div>
                {{#if smallAsset }}
                    <div class="card-image" style="background-image: url('{{getContextPath ''}}{{smallAsset.coverImagePath}}');"></div>
                {{else}}

                    {{#if cardImagePath}}
                        <div class="card-image" style="background-image: url('{{getContextPath ''}}{{cardImagePath}}');"></div>
                    {{else}}
                        <div class="card-image" style="background-image: url('{{getContextPath ''}}/etc.clientlibs/settings/wcm/designs/default/resources/social/enablement/defaultCardImage.png');"></div>
                    {{/if}}
                {{/if}}
            </a>
        {{/if}}

        <div class="card-info">
            <div class="title">{{title}}</div>
            {{include this resourceType="social/enablement/components/hbs/view/resource/card" template="due-status"}}
            <div class="card-detail-info">{{totalSize}} {{i18n "resources"}}
            </div>
            {{include this resourceType="social/enablement/components/hbs/view/resource/card" template="contact-details"}}
        </div>
    </div>
</div>
