<div class="scf-learningpath" data-component-id="{{id}}" data-scf-component="social/enablement/components/hbs/view/learningpath/detail">
    <div class="scf-learningPath-title">
        <div class="scf-social-console-textbox-tooltip scf-js-enforce-order-message alert alert-danger">
            {{i18n "Sorry. You must first complete"}} <span class="scf-lp-title">{{firstIncompleteResourceTitle}}</span> {{i18n "before you can move forward in"}} <span class="scf-lp-title">{{title}}</span> {{i18n "Learning Path."}}
        </div>

        <div class="scf-lp-head"><span class="scf-lp-title">{{title}}</span> ( {{totalSize}}
            {{#if enablementResources.[1]}}{{i18n "resources"}}{{else}}{{i18n "resource"}}{{/if}} )
        </div>

        <div class="scf-view-toggle-btn">
            <button class="scf-js-list-view-btn btn-default btn-primary" type="button" data-toggle= {{i18n "List View"}} data-original-title= {{i18n "List View"}} evt="click=showListView">
                <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            </button>
            <button class="scf-js-card-view-btn btn-default" type="button" data-toggle= {{i18n "Card View"}} data-original-title= {{i18n "Card View"}} evt="click=showCardView">
                <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
            </button>
        </div>
    </div>
    <div class="scf-learningpath-resources">
        <div class="scf-js-cardView scf-is-hidden">
            {{include this resourceType="social/enablement/components/hbs/view/learningpath/card-list"}}
        </div>
        <div class="scf-js-listView">
            {{include this resourceType="social/enablement/components/hbs/view/learningpath/table-list"}}
        </div>
    </div>
</div>
