<div class="content scf-js-cq-social-themes social-themes scf-groups" data-component-id="{{id}}" data-scf-component="social/members/components/hbs/groups">

    <table is="coral-table" class="cq-community-groups foundation-collection foundation-layout-util-maximized" sticky data-foundation-layout="{&quot;name&quot;:&quot;&quot;}">
        <colgroup>
            <col is="coral-table-column" alignment="left">
            <col is="coral-table-column" alignment="left">
            <col is="coral-table-column" fixedwidth alignment="center">
        </colgroup>
        <thead is="coral-table-head" sticky>
            <tr is="coral-table-row">
                <th is="coral-table-headercell">{{i18n "Name" }}</th>
                <th is="coral-table-headercell">{{i18n "Description" }}</th>
                <th is="coral-table-headercell">{{i18n "Members" }}</th>
            </tr>
        </thead>
        <tbody is="coral-table-body">
            {{#each items}}
                {{include this resourceType="social/members/components/hbs/groups/group" authoringDisabled="true"}}
            {{/each}}
        </tbody>
    </table>

</div>
