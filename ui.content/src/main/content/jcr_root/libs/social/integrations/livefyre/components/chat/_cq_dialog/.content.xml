<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:mixinTypes="[granite:InternalArea]"
    jcr:primaryType="nt:unstructured"
    jcr:title="Livefyre Chat"
    sling:resourceType="cq/gui/components/authoring/dialog"
    class="cq-social-livefyre-touch-coll-meta"
    extraClientlibs="[cq.social.integrations.livefyre.touchui]"
    helpPath="en/cq/current/wcm/default_components.html#Chat">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-social-livefyre-touch-coll-meta">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <configTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Configuration"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <initialNumVisible
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                allowBlank="true"
                                emptyText="50"
                                fieldDescription="Set the default number of posts visible upon load.  This may be an integer from 1 to 50. "
                                fieldLabel="Initial Items"
                                maxValue="50"
                                minValue="1"
                                name="./initialNumVisible"
                                validateOnBlur="true"
                                xtype="numberfield"/>
                            <collectionLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/hyperlink"
                                class="scf-js-lf-collectionLink"
                                hideText="{Boolean}false"
                                target="_blank"
                                text="Getting Collection Link"/>
                            <disableAvatars/>
                            <readOnly/>
                            <datetimeFormat/>
                        </items>
                    </column>
                </items>
            </configTab>
        </items>
    </content>
</jcr:root>
