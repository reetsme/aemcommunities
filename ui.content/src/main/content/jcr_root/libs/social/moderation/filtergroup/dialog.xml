<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:mixinTypes="[granite:InternalArea]"
    jcr:primaryType="cq:Dialog"
    title="User State Toggle Button"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <text
            jcr:primaryType="cq:Widget"
            title="Texts &amp; Labels"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <type
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Multiselect?"
                    fieldLabel="Multiselect?"
                    name="./multi"
                    xtype="checkbox"/>
                <options
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Options"
                    name="./options"
                    xtype="multifield"/>
                <name
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Tally Name"
                    name="./name"
                    xtype="textfield"/>
            </items>
        </text>
    </items>
</jcr:root>
