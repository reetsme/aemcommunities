<div data-component-id="{{id}}" data-scf-component='social/messaging/components/hbs/message'>
    <div class='messageSubject'>
        {{#if subject}}
            {{subject}}
        {{else}}
            {{i18n "NO SUBJECT"}}
        {{/if}}
    </div>
    <div class='messageParticipants'>
        {{i18n "Between"}}&nbsp;
        {{#if sender.profileUrl}}
            <a target="_blank" href='{{sender.profileUrl}}' class='messaging-user-link'>
        {{/if}}
                {{sender.name}}
        {{#if sender.profileUrl}}
            </a>
        {{/if}}
        &nbsp;{{i18n "and"}}&nbsp;
        {{#each recipients}}
            {{#if profileUrl}}
                <a target="_blank" href='{{profileUrl}}' class='messaging-user-link'>
            {{/if}}
                    {{name}}
            {{#if profileUrl}}
                </a>
            {{/if}}
            {{#if isNotLast}}
                ,&nbsp;
            {{/if}}
        {{/each}}
    </div>
    <div class='message-detail-container'>
        <div class='message-detail-avatar-column pull-left'>
            <img class='avatar-image' src='{{sender.avatarUrl}}' />
        </div>
        <div class='message-details col-md-11'>
            <div class='clearfix'>
                <div class="inline-div">
                    {{#if sender.profileUrl}}
                        <a target="_blank" href='{{sender.profileUrl}}' class='messaging-user-link'>
                    {{/if}}
                           {{sender.name}}
                    {{#if sender.profileUrl}}
                        </a>
                    {{/if}}
                </div>
                <div class="inline-div detail-view-timestamp">
                    {{pretty-time timestamp}}
                </div>
            </div>
            <div class="message-detailed-content">
                {{{message}}}
            </div>
        </div>
    </div>
    <div class="message-attachments">
        {{#each attachmentsList}}
            <div class='attachment-holder'>
                <a target='_blank' href='{{externalLink}}'>
                    <img src='{{externalLink}}.thumb.80.120.png' />
                </a>
            </div>
        {{/each}}
    </div>
</div>
