<div data-component-id="{{id}}" data-scf-component="social/connect/pinterest/components/admin/hbs/pinterestconfig">
    <form id="editSocialConfigWizard" action="{{ url }}" method="post" class="coral-Wizard coral-Form coral-Form--vertical js-scf-communities-components-form" data-init="flexwizard" enctype="multipart/form-data">
        <input type="hidden" name=":operation" value="social:updatePinterestConfig">
        <input type="hidden" name="_charset_" value="utf-8">
        <input type="hidden" name="oauth.config.provider.id" value="soco-pinterest">
        <input type="hidden" name="oauth.access.token.persist" value="true">
        <coral-wizardview>
            <div class="scf-wizardview-header">
                <div class="scf-wizard-title coral-Heading coral-Heading--2">
                    {{i18n "Pinterest Social Login Configuration"}}
                </div>
                <coral-steplist class="scf-wizard-steplist" coral-wizardview-steplist="">
                    <coral-step selected>
                    </coral-step>
                </coral-steplist>
                <coral-panelstack coral-wizardview-panelstack="" class="scf-wizard-controls">
                    <coral-panel role="tabpanel">
                        <coral-panel-content>
                            <a is="coral-anchorbutton" href="/libs/social/connect/pinterest/content/configurations.html">{{i18n "Cancel"}}</a>
                            <button class="coral-Button" is="coral-button" variant="primary" type="submit">{{i18n "Save"}}</button>
                        </coral-panel-content>
                    </coral-panel>
                </coral-panelstack>
            </div>
        </coral-wizardview>
        {{include this resourceType="social/connect/pinterest/components/admin/hbs/pinterestconfig" template="editconfigtabs" authoringDisabled='true'}}
    </form>
</div>
