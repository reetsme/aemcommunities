<div class="scf scf-ratings" data-component-id="{{id}}" data-scf-component="social/tally/components/hbs/rating">
    {{#if currentUserResponse}}
    {{else}}
        {{#if loggedInUser.loggedIn}}
            {{i18n "Rate this:"}}
        {{/if}}
    {{/if}}
    <div>
        <div class="scf-ratings-bar-empty" evt="mouseleave=resetHighlights">
            {{#if currentUserResponse}}
                <div class="scf-ratings-bar scf-js-ratings-bar scf-ratings-bar-selected" data-rating-shown="{{xss-htmlAttr currentUserResponse.rating}}" title=" {{averageRating}} of 5 stars">
            {{else}}
                <div class="scf-ratings-bar scf-js-ratings-bar scf-ratings-bar-full" data-rating-shown="{{xss-htmlAttr averageRating}}" title=" {{averageRating}} of 5 stars ">
            {{/if}}
            {{#if loggedInUser.loggedIn}}
                {{#if canUserRespond}}
                    <div class="scf-rating-trigger-bar ">
                        <div class="scf-ratings-star " data-rating-value="1 " evt="click=rate,mouseenter=highlight "></div>
                        <div class="scf-ratings-star " data-rating-value="2 " evt="click=rate,mouseenter=highlight "></div>
                        <div class="scf-ratings-star " data-rating-value="3 " evt="click=rate,mouseenter=highlight "></div>
                        <div class="scf-ratings-star " data-rating-value="4 " evt="click=rate,mouseenter=highlight "></div>
                        <div class="scf-ratings-star " data-rating-value="5 " evt="click=rate,mouseenter=highlight "></div>
                    </div>
                {{/if}}
            {{/if}}
            </div>
            </div>
            <p class="scf-ratings-text scf-quiet " evt="click=toggleHistogram ">{{formattedAverageRating}} {{i18n "out of 5 stars"}} ({{totalNumberOfResponses}})</p>
            {{include this template="histogram" authoringDisabled="true"}}
        </div>
    </div>
