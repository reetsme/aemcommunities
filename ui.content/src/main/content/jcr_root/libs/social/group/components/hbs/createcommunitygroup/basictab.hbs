<div>
    <div class="coral-FixedColumn foundation-layout-util-vmargin">
        <div class="coral-FixedColumn-column">
            <div class="coral-Form-fieldwrapper">
                <label class="coral-Form-fieldlabel">{{i18n "Community Group Title"}}</label>
               <input class="coral-Form-field coral-Textfield scf-js-social-console-title" id="scf-js-social-community-title" type="text" name="name" value="{{name}}" aria-required="true">
            </div>
            <div class="coral-Form-fieldwrapper">
                <label class="coral-Form-fieldlabel">{{i18n "Community Group Description"}}</label>
                <textarea class="coral-Form-field resizable-none coral-Textfield coral-Textfield--multiline" name="jcr:description" rows="5">{{description}}</textarea>
            </div>
            <div class="coral-Form-fieldwrapper">
                  <label class="coral-Form-fieldlabel">{{i18n "Site Global Shared Store"}}</label>
                  <div id="console-base-language">
                      <span id="social-community"  class="coral-Select coral-Form-field" data-init="select">
                      <input type='text' name="siteGlobalShareStore" class='coral-Textfield social-community-value' disabled value={{siteUrlName}}></input>
                      </span>
                  </div>
             </div>
            <div class="coral-Form-fieldwrapper" id="scf-community_group_root">
                <label class="coral-Form-fieldlabel">{{i18n "Community Group Root"}}</label>
                {{#include this.id resourceType="granite/ui/components/foundation/form/pathbrowser" }}
                    { "name" : "siteRoot", "rootPath" : "/content" }
                {{/include}}
            </div>
           <div class="coral-Form-fieldwrapper">
                  <label class="coral-Form-fieldlabel">{{i18n "Additional Available Community Group Language(s)"}}</label>
                  <div id="community-base-language">
                         <span id="social-community-baseLanguageSelect" class="coral-Select coral-Form-field" data-init="select">
                           <coral-select name="initialLanguages" id="select-item-dropdown" multiple class="scf-js-cq-social-blueprints-select">
                           </coral-select>
                         </span>
                  </div>
             </div>
