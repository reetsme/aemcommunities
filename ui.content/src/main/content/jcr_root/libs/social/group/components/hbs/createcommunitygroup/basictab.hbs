            <div id="modal-data" class="coral-Modal">
                 <div class="coral-Modal-header">
                 <i class="coral-Modal-typeIcon coral-Icon coral-Icon--sizeS"></i>
                 <h2 class="coral-Modal-title coral-Heading coral-Heading--2">{{i18n "Change Name"}}</h2>
                 <button type="button" class="coral-MinimalButton coral-Modal-closeButton" title="Close" data-dismiss="modal">
                         <i class="coral-Icon coral-Icon--sizeXS coral-Icon--close coral-MinimalButton-icon "></i>
                 </button>
            </div>
                  <div class="coral-Modal-body" style="width:338px">
                       <input class="coral-Form-field coral-Textfield scf-js-social-group-title" style="width:305px" type="text" id="modal-value" >
                      </input>
                  </div>
                  <div class="coral-Modal-footer">
                       <button type="button" class="coral-Button" data-dismiss="modal">{{i18n "Close"}}</button>
                       <button type="button" id="save-title" class="coral-Button coral-Button--primary" data-dismiss="modal">{{i18n "Save"}}</button>
                  </div>
            </div>
            <div class="coral-Form-fieldwrapper">
                <label class="coral-Form-fieldlabel">{{i18n "Community Group Name"}}</label>
                <input class="coral-Form-field scf-js-social-console-siteurl coral-Textfield" data-validation="foundation.jcr.name" type="text" name="urlName" value="{{siteUrlName}}" aria-required="true">
            </div>
            <div class="coral-Form-fieldwrapper">
                <input class="coral-Form-field scf-js-social-console-siteurlclone coral-Textfield" type="text" name="siteurlclone" disabled="disabled" value="{{siteUrlName}}" aria-required="true">
            </div>
            <div class="coral-Form-fieldwrapper">
                <coral-select class="scf-js-cq-social-blueprints-select" name="blueprint" placeholder="{{i18n "select group template"}}" id="social-group-bluePrintSelect"></coral-select>
