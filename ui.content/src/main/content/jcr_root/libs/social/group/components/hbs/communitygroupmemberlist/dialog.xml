<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:mixinTypes="[granite:InternalArea]"
    jcr:primaryType="cq:Dialog"
    title="Community Member List"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                border="false"
                height=""
                title="Tab 1"
                width="">
                <items jcr:primaryType="cq:WidgetCollection">
                    <prop1
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        disabled="false"
                        fieldLabel="Community Group Name"
                        grow="false"
                        hideLabel="false"
                        name="./groupId"
                        readOnly="false"
                        selectOnFocus="false"
                        xtype="textfield"/>
                    <prop2
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        defaultValue="True"
                        fieldDescription="Please check if you want to Include subgroups in the list"
                        fieldLabel="Include Sub Groups"
                        name="./includeSubGroups"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
