<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:mixinTypes="[granite:InternalArea]"
    jcr:primaryType="cq:Dialog"
    title="Review Component"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <first
            jcr:primaryType="cq:Widget"
            title="Review Summary"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <path
                    jcr:primaryType="cq:Widget"
                    fieldDescription=""
                    fieldLabel="Review Path"
                    name="./reviewPath"
                    predicate=""
                    rootPath="/content/"
                    xtype="pathfield"/>
                <includeHistogram
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Include histogram"
                    fieldLabel_commentI18n="Include histogram in summary"
                    name="./includeHistogram"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </first>
    </items>
</jcr:root>
