<div class="content scf-js-cq-social-themes social-themes" data-component-id="{{id}}" data-scf-component="social/console/components/hbs/createsitetemplate/communityfunctions">
    <article class="scf-function-library">
        <h1 class="coral-Heading coral-Heading--1">{{i18n "Community Functions Library"}}</h1>
        <h4 class="coral-Heading coral-Heading--4">{{i18n "Drag and Drop to the Builder to add Community Functions"}}</h4>
        <div class="dropzone">
            <ul class="draggable" data-init="draggable-list" data-allow="drag" data-closeable="true">
                {{#each items}}
                    <li data-component-type="{{this.componentType}}" data-function-path= {{encodeForHTMLAttr this.id}}>
                        <span class="scf-func-title-grp">
                        <span class="scf-is-func-title"></span>
                        <span class="scf-func-name">{{i18n this.title}}</span>
                        </span>
                        <i class="coral-Icon coral-Icon--apps scf-console-list-move"></i>
                        <i class="coral-Icon coral-Icon--delete scf-console-list-item-icon scf-js-list-remove scf-js-item-action"></i>
                        <i class="coral-Icon coral-Icon--gear scf-console-list-item-icon scf-js-list-edit scf-js-item-action"></i>
                    </li>
                {{/each}}
            </ul>
        </div>
    </article>
</div>
