<div class="scf-forgotpassword scf-forgotpassword-container" data-component-id="{{id}}" data-scf-component="social/console/components/hbs/forgotpassword">
    <div class="scf-js-forgotpassword-form">
        <h3>{{i18n "Forgot Password"}}</h3>
        <p>{{i18n "If you have forgotten your password please submit your email address below. You will then receive an e-mail to confirm this operation."}}</p>
        <form role="form" method="POST" action="{{id}}.social.json" evt="submit=requestPasswordURL">
            <input type="hidden" name="_charset_" value="UTF-8" />
            <div class="form-group">
                <input type="text" placeholder="Email" class="form-control" data-attrib="userEmail" name="userEmail" />
                <input type="hidden" data-attrib="emailTemplatePath" name="emailTemplatePath" value= {{this.properties.emailTemplatePath}} />
                <input type="hidden" data-attrib="nextPage" name="nextPage" value= {{this.properties.nextPage}} />
                <input type="hidden" data-attrib="redirectPath" name="redirectPath" value="{{this.properties.redirectPath}}" />
                <input type="hidden" name=":operation" value="social:forgotPassword" />
            </div>
            <div class="form-group">
                <button type="submit" evt="submit=requestPasswordURL" class="btn btn-default">{{i18n "Submit"}}</button>
            </div>
        </form>
    </div>
    <div class="scf-js-forgotpassword-text scf-is-hidden">
        <h3>{{i18n "Please check your email"}}</h3>
        <p>{{i18n "We sent an email with instruction for resetting your password. Sometimes the email might take a few minutes to arrive"}}</p>
        <p>{{i18n "Did not receive an email? "}}<a href="#" evt="click=hideForm">{{i18n "Try Again"}}</a></p>
    </div>
</div>
