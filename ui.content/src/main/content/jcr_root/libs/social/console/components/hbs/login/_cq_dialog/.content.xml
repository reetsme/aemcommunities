<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:mixinTypes="[granite:InternalArea]"
    jcr:primaryType="nt:unstructured"
    jcr:title="Login Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <text
                jcr:primaryType="nt:unstructured"
                jcr:title="Texts &amp; Labels"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <allowFBlogin
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Allow logging in with Facebook accounts"
                                fieldLabel="Allow logging in with Facebook accounts"
                                name="./allowFBLogin"
                                text="Allow logging in with Facebook accounts"
                                value="{Boolean}true"/>
                            <allowTWlogin
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Allow logging in with Twitter accounts"
                                fieldLabel="Allow logging in with Twitter accounts"
                                name="./allowTWLogin"
                                text="Allow logging in with Twitter accounts"
                                value="{Boolean}true"/>
                            <allowRegistration
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Does the site allow user registrations?"
                                fieldLabel="Does the site allow user registrations?"
                                name="./allowRegistration"
                                text="Does the site allow user registrations?"
                                value="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </text>
        </items>
    </content>
</jcr:root>
