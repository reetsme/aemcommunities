<div id="social-console-edit-sitetheme" data-theme-value='{{this.themeId}}' data-sitebannerurl-value='{{this.siteBannerUrl}}'>
    <div>
        <coral-tabview>
            <coral-tablist class="social-console-design-tab" target="design-tabs">
                <coral-tab>{{i18n "Community Site Theme"}}</coral-tab>
                <coral-tab>{{i18n "Community Site Branding"}}</coral-tab>
            </coral-tablist>
            <coral-panelstack id="cdesign-tabs">
                <coral-panel class="coral-Well">
                    {{include this.id resourceType='social/console/components/hbs/sitethemes'}}
                </coral-panel>
                <coral-panel class="coral-Well">
                    <div class="coral-FixedColumn foundation-layout-util-vmargin">
                        <div class="coral-FixedColumn-column">
                            {{#if this.siteBanner}}
                                {{modifycontext this.siteBanner key="inputname" value="pagebanner"}} {{include this.siteBanner resourceType='social/console/components/hbs/imageupload' authoringDisabled='true'}}
                            {{else}}
                                {{#include this.id resourceType='social/console/components/hbs/imageupload' authoringDisabled='true' }}
                                    { "inputname" : "pagebanner" }
                                {{/include}}
                            {{/if}}
                        </div>
                    </div>
                </coral-panel>
            </coral-panelstack>
        </coral-tabview>
    </div>
</div>
