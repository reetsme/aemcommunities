<div class="js-social-console-theme-card" data-component-id="{{id}}" data-scf-component="social/console/components/hbs/grouptemplates/grouptemplate">
    <div class="selection-layer"><i class="select"></i>
    </div>
    <article class='card-project stack foundation-collection-item' itemprop='item' itemscope=''>
        <i class="select"></i>
        <i class="move"></i>
        {{#if new}}
            <span class="flag info">{{i18n "New"}}</span>
        {{/if}}
        <div class="card">
            <span class="image">
        <img src="{{image}}" alt="">
        </span>
            <div class="label">
                <div class="main">
                    <h4>{{i18n title}}</h4>
                </div>
                <p>{{description}}</p>
            </div>
            <div class="foundation-collection-quickactions">
                <a title="{{i18n " Edit Group Template "}}" href="{{getContextPath ''}}/libs/social/console/content/editgrouptemplate.html{{this.id}}">
                    <i class="coral-Icon coral-Icon--infoCircle coral-Icon--sizeXS"></i>
                </a>
            </div>
        </div>
    </article>
</div>
