{{#if this.author.badges}}
    <coral-tooltip class="scf-js-profile-badges-tooltip" placement="right" target="_next">
        {{#if this.author.hasAssignedBadges}}
            <p>{{i18n "Assigned"}}</p>
            <div class="scf-js-user-profile-badges-tooltip-list">
                {{#each this.author.badges}}
                    <span class="scf-js-user-profile-badge-item">
                        <img src="{{this.imageUrl}}" />
                        {{this.title}}
                    </span>
                {{/each}}
            </div>
        {{/if}}
        {{#if this.author.hasEarnedTopBadges}}
            <p>{{i18n "Earned"}}</p>
            <div class="scf-js-user-profile-badges-tooltip-list">
                {{#each this.author.badges}}
                    {{#unless this.isAssigned}}
                        <span class="scf-js-user-profile-badge-item">
                            <img src="{{this.imageUrl}}" />
                            {{this.title}}
                        </span>
                    {{/unless}}
                {{/each}}
            </div>
        {{/if}}
    </coral-tooltip>
{{/if}}
